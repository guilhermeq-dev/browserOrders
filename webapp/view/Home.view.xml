<mvc:View controllerName="com.lab2dev.browserorders.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
	<Page id="page" title="Orders ({/count})">
		<content>
			<List id="List"  width="auto" items="{/Orders}" headerText="Orders({count})">
				<headerToolbar>
					<Toolbar>
						<SearchField width="25%" search=".onSearch" showRefreshButton="true" placeholder="Search" />
						<ToolbarSpacer />
						
					</Toolbar>
				</headerToolbar>
				<items>
					<ObjectListItem 
						title="Order {OrderID}" 
						number="{ path: 'OrderDate', formatter: '.formatter.formatDate' }" 
						type="Navigation"
						press="onPress" >
						<attributes>
							<ObjectAttribute text="{ShipName}" />
							<ObjectAttribute text="Shipped: { path: 'ShippedDate', formatter: '.formatter.formatDate' }" />
						</attributes>
						<firstStatus>
							<ObjectStatus text="{
                                parts: [{path: 'OrderDate'}, {path: 'ShippedDate'}],
                                formatter: '.formatter.shipStatusText'}"
								state="{
                                parts: [{path: 'OrderDate'}, {path: 'ShippedDate'}],
                                formatter: '.formatter.shipStatusState'}"
								/>
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
