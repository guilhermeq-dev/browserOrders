<mvc:View controllerName="com.lab2dev.browserorders.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
	<Page id="page" title="Orders">
		<content>
			<List id="List"  width="auto" items="{items>/}">
				<headerToolbar>
					<Toolbar>
						<SearchField width="25%" search=".onSearch" showRefreshButton="true" placeholder="Search" />
						<ToolbarSpacer />
						
					</Toolbar>
				</headerToolbar>
				<items>
					<ObjectListItem 
						title="{items>OrderID}" 
						number="{ path: 'items>OrderDate', formatter: '.formatter.formatDate' }" 
						type="Navigation"
						press="onPress" >
						<attributes>
							<ObjectAttribute text="{items>ShipName}" />
							<ObjectAttribute text="Shipped: { path: 'items>ShippedDate', formatter: '.formatter.formatDate' }" />
						</attributes>
						<firstStatus>
							<ObjectStatus text="{
                                parts: ['items>OrderDate', 'items>ShippedDate'],
                                formatter: '.formatter.formatDate'}"
								/>
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
